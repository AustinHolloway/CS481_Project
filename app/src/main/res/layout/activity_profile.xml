<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProfileActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabBarProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="146dp"
            android:layout_height="153dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/default_picture"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="32dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/theirName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/theirName" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_email" />

        <Button
            android:id="@+id/btnResestPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnChangePassword"
            android:text="@string/Reset_Password"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="578dp" />

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:backgroundTint="#F80202"
            android:onClick="btnLogoutclick"
            android:text="@string/logout"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="504dp" />

    </LinearLayout>

</RelativeLayout>